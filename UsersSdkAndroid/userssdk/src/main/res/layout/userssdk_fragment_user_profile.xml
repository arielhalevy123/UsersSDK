<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp">

        <TextView
            android:id="@+id/tvName" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEmail" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvRole" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="4dp" />

        <!-- NEW: KPIs -->
        <TextView
            android:id="@+id/tvNextAppt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Next appointment: â€”"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvApptCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Appointments count: 0"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent" android:layout_height="1dp"
            android:layout_marginTop="12dp" android:background="#DDDDDD"/>

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textStyle="bold" android:text="Custom fields"
            android:layout_marginTop="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFields"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>